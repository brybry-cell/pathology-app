<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".ConfrimReqActivity">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:src="@drawable/back_arrow"
            android:contentDescription="Back" />

        <TextView
            android:id="@+id/inboxTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Request Summary"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/black" />
    </LinearLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header"
        android:layout_marginTop="0dp"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- First CardView (Items & Quantity) -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:stretchColumns="1"
                        android:background="@drawable/table_border">

                        <TableRow
                            android:background="@color/red">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="8dp"
                                android:text="ITEMS"
                                android:textAlignment="center"
                                android:textColor="@android:color/white"
                                android:textStyle="bold"
                                android:textSize="14sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="8dp"
                                android:text="QUANTITY"
                                android:textAlignment="center"
                                android:textColor="@android:color/white"
                                android:textStyle="bold"
                                android:textSize="14sp" />
                        </TableRow>

                        <TableRow>
                            <TextView
                                android:padding="8dp"
                                android:text="Microscope"
                                android:textSize="14sp" />

                            <TextView
                                android:padding="8dp"
                                android:text="2"
                                android:gravity="center"
                                android:textSize="14sp" />
                        </TableRow>

                        <TableRow>
                            <TextView
                                android:padding="8dp"
                                android:text="Haematology Analyzer"
                                android:textSize="14sp" />

                            <TextView
                                android:padding="8dp"
                                android:text="1"
                                android:gravity="center"
                                android:textSize="14sp" />
                        </TableRow>

                        <TableRow>
                            <TextView
                                android:padding="8dp"
                                android:text="HBA1c Machine"
                                android:textSize="14sp" />

                            <TextView
                                android:padding="8dp"
                                android:text="3"
                                android:gravity="center"
                                android:textSize="14sp" />
                        </TableRow>
                    </TableLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Second CardView (Request Date & Return Date) -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:paddingTop="10dp"
                        android:paddingBottom="5dp"
                        android:layout_height="wrap_content"
                        android:text="Request Date: "
                        android:textColor="@color/black"
                        android:textSize="13sp"/>

                    <EditText
                        android:id="@+id/etReqDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/search_background"
                        android:hint="YYYY-MM-DD"
                        android:inputType="text"
                        android:padding="5dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:paddingTop="10dp"
                        android:paddingBottom="5dp"
                        android:layout_height="wrap_content"
                        android:text="Return Date: "
                        android:textColor="@color/black"
                        android:textSize="13sp"/>

                    <EditText
                        android:id="@+id/etRetDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/search_background"
                        android:hint="YYYY-MM-DD"
                        android:inputType="text"
                        android:padding="5dp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Third CardView (Purpose) -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_height="15dp"
                        android:layout_width="wrap_content"
                        android:text="PURPOSE:"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:layout_marginBottom="8dp" />

                    <CheckBox
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:id="@+id/chkPractical"
                        android:text="Practical Sessions / Lab Work"
                        android:textSize="14sp" />

                    <CheckBox
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:id="@+id/chkResearch"
                        android:text="Research Projects"
                        android:textSize="14sp" />

                    <CheckBox
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:id="@+id/chkPresentation"
                        android:text="Demonstrations or Presentations"
                        android:textSize="14sp" />

                    <EditText
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:id="@+id/txtOthers"
                        android:hint="Others..."
                        android:layout_marginTop="10dp"
                        android:background="@null"
                        android:inputType="text"
                        android:textSize="14sp"
                        android:singleLine="true" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Confirm Button -->
            <Button
                android:id="@+id/btnConfirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:backgroundTint="@color/red"
                android:text="Confirm"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:padding="12dp"
                android:textSize="16sp" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
